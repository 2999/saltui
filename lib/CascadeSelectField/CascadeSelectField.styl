$cascade-select-field-tip-color = $gray-lighter
$cascade-select-field-readonly-color = $gray-lighter

.{$prefix}-cascade-select-field-value
    > *
        vertical-align middle

.{$prefix}-cascade-select-field-icon svg
    fill $cascade-select-field-tip-color

.{$prefix}-cascade-select-field-placeholder
    max-width 100%
    height 24px
    line-height 24px
    color $cascade-select-field-tip-color

.{$prefix}-cascade-select-field-readonly
    color $cascade-select-field-readonly-color

@require './CascadeSlot';

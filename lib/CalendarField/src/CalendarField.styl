//{$prefix}-calendar-field
//  display block

.{$prefix}-calendar-field-value
  > *
    vertical-align middle
  .date-text
    margin-right: 5px
  .week, .date-type
    color #ccc
    margin-right 5px

.{$prefix}-calendar-field-placeholder, .{$prefix}-calendar-field-value
  max-width 100%
  height 24px
  line-height 24px

.{$prefix}-calendar-field-placeholder
  color $gray-lighter

.{$prefix}-calendar-field-readonly
  color $gray-lighter

.{$prefix}-calendar-field .{$prefix}-field-layout-h-label
  display -webkit-box
  display -webkit-flex
  display flex
  -webkit-box-align center
  -webkit-align-items center
  align-items center

.{$prefix}-calendar-field-show-box
  // 水平模式
  &.h-layout
    div:first-child
      margin-bottom 7px
  .split-line
    display inline-block
    height 0
    width 15px
    border-top 1px solid #ccc
    margin-left: 20px
    margin-right: 20px
  &.v-layout
    .date-text
      display block